// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "web-client/src/commons/": true,
    "mobile-client/src/commons/": true,
    "backend/imports/commons/": true,
    "backend/.meteor/": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "web-client/src/commons/": true,
    "mobile-client/src/commons/": true,
    "backend/imports/commons/": true,
    "backend/.meteor/": true
  }
}