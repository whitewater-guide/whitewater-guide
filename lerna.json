{
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": ["dev", "master"],
      "ignoreChanges": ["*.md"],
      "message": "chore(release): publish new packages"
    },
    "run": {
      "noBail": true
    }
  },
  "npmClient": "yarn",
  "packages": ["packages/*", "tooling/*", "services/*"]
}
