{
  "name": "whitewater-backend",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Konstantin Kuznetsov",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "pretest": "env $(cat ../../build/.env.test | xargs) node ./src/test/pretest.js",
    "posttest": "env $(cat ../../build/.env.test | xargs) node ./src/test/posttest.js",
    "test": "env $(cat ../../build/.env.test | xargs) jest -i",
    "test:watch": "env $(cat ../../build/.env.test | xargs) jest -i --watch",
    "dev:dump": "npm_scripts/dev-dump.sh",
    "dev:restore": "npm_scripts/dev-restore.sh",
    "dev:reset": "knex --cwd . --knexfile src/db/knex.development.js migrate:rollback && knex --cwd . --knexfile src/db/knex.development.js migrate:latest && knex --cwd . --knexfile src/db/knex.development.js seed:run",
    "madge": "madge --circular src/index.js"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.16.8",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/fs-extra": "^5.0.1",
    "@types/graphql": "^0.12.4",
    "@types/jest": "^22.2.0",
    "@types/joi": "^13.0.5",
    "@types/knex": "^0.14.8",
    "@types/lodash": "^4.14.104",
    "@types/minio": "^4.0.1",
    "@types/node": "^9.4.7",
    "@types/node-schedule": "^1.2.2",
    "@types/passport": "^0.4.3",
    "@types/passport-facebook": "^2.1.7",
    "@types/pg": "^7.4.5",
    "@types/pino": "^4.7.1",
    "@types/sqlstring": "^2.2.0",
    "@types/superagent": "^3.5.7",
    "@types/valid-url": "^1.0.2",
    "apollo-link": "^1.2.1",
    "jest": "^22.4.2",
    "jest-serializer-sql": "^1.0.0",
    "madge": "^3.0.1",
    "superagent": "^3.8.2",
    "ts-jest": "^22.4.1",
    "tslib": "^1.9.0",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "apollo-errors": "^1.7.1",
    "apollo-resolvers": "https://github.com/doomsower/apollo-resolvers/releases/download/2.0.0/apollo-resolvers-1.0.2.tgz",
    "apollo-server-express": "^1.3.2",
    "axios": "^0.18.0",
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "cron-parser": "^2.4.5",
    "dataloader": "^1.4.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "fs-extra": "^5.0.0",
    "graphql": "^0.13.0",
    "graphql-fields": "^1.0.2",
    "graphql-iso-date": "^3.5.0",
    "graphql-server-express": "^1.3.2",
    "graphql-tools": "^2.23.0",
    "graphql-type-json": "^0.2.0",
    "http-shutdown": "^1.2.0",
    "joi": "^13.1.2",
    "knex": "^0.14.4",
    "lodash": "^4.17.5",
    "merge-graphql-schemas": "^1.5.0",
    "minio": "^4.0.0",
    "node-schedule": "^1.3.0",
    "omit-deep-lodash": "^1.0.0",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "pg": "^7.4.1",
    "pino": "^4.14.0",
    "pretty-error": "^2.1.1",
    "sqlstring": "^2.3.1",
    "treeize": "^2.1.2",
    "valid-url": "^1.0.9",
    "wkx": "^0.4.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "snapshotSerializers": [
      "jest-serializer-sql"
    ]
  }
}
