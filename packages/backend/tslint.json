{
  "extends": ["tslint:latest", "tslint-react", "tslint-eslint-rules"],
  "rules": {
    "arrow-parens": false,
    "arrow-return-shorthand": [false],
    "brace-style": [ true, "1tbs", { "allowSingleLine": true}],
    "comment-format": [true, "check-space"],
    "import-blacklist": [true, "rxjs"],
    "interface-name": false,
    "jsx-boolean-value": [true, "never"],
    "jsx-no-multiline-js": false,
    "member-access": false,
    "member-ordering": false,
    "newline-before-return": false,
    "no-any": false,
    "no-console": true,
    "no-empty": [true, "allow-empty-catch", "allow-empty-functions"],
    "no-inferrable-types": [true],
    "no-implicit-dependencies": [
      true,
      "dev",
      [
        "@apollo",
        "@apollo/undefined",
        "@auth",
        "@auth/undefined",
        "@db",
        "@db/undefined",
        "@db/connectors",
        "@features",
        "@features/undefined",
        "@features/banners",
        "@features/emails",
        "@features/gauges",
        "@features/groups",
        "@features/jobs",
        "@features/measurements",
        "@features/media",
        "@features/points",
        "@features/purchases",
        "@features/regions",
        "@features/rivers",
        "@features/scripts",
        "@features/sections",
        "@features/sources",
        "@features/tags",
        "@features/users",
        "@log",
        "@log/undefined",
        "@minio",
        "@minio/undefined",
        "@redis",
        "@redis/undefined",
        "@seeds",
        "@seeds/01_users",
        "@seeds/02_points",
        "@seeds/03_groups",
        "@seeds/04_regions",
        "@seeds/05_sources",
        "@seeds/06_gauges",
        "@seeds/07_rivers",
        "@seeds/08_tags",
        "@seeds/09_sections",
        "@seeds/10_measurements",
        "@seeds/10_measurements",
        "@seeds/11_media",
        "@seeds/12_boom_promos",
        "@seeds/13_transactions",
        "@seeds/14_banners",
        "@test",
        "@test/undefined",
        "@utils",
        "@utils/undefined",
        "@ww-commons",
        "@ww-commons/undefined",
        "@ww-commons/utils"
      ]
    ],
    "no-import-side-effect": [true, {"ignore-module": "^rxjs/"}],
    "no-invalid-this": [true, "check-function-in-method"],
    "no-null-keyword": false,
    "no-require-imports": false,
    "no-submodule-imports": [true, "lodash-es", "date-fns", "lodash", "negotiator", "@ww-commons"],
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "object-curly-spacing": [true, "always"],
    "object-literal-sort-keys": false,
    "only-arrow-functions": [true, "allow-declarations"],
    "ordered-imports": [ true, { "import-sources-order": "case-insensitive", "named-imports-order": "case-insensitive"}],
    "prefer-method-signature": false,
    "prefer-template": [true, "allow-single-concat"],
    "quotemark": [true, "single", "jsx-double", "avoid-escape"],
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "triple-equals": [true, "allow-null-check"],
    "typedef": [true,"parameter", "property-declaration", "member-variable-declaration"],
    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case", "allow-leading-underscore"]
  }
}
