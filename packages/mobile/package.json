{
  "name": "@whitewater-guide/mobile",
  "private": true,
  "version": "1.17.3",
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "./scripts/postinstall.sh",
    "start": "react-native start",
    "clean": "(yarn clean:js) && (yarn clean:native)",
    "clean:native": "(yarn ios:clean) && (yarn android:clean)",
    "clean:js": "rm -rf $TMPDIR/react-* && rm -rf $TMPDIR/metro-bundler-cache-* && watchman watch-del-all && rm -rf src/__generated__ && find src -name \"*.generated.ts\" -delete",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "setup-dev-env": "rnuc .env.development.yml",
    "android": "yarn setup-dev-env && adb reverse tcp:3333 tcp:3333 && react-native run-android --appIdSuffix staging",
    "android:clean": "(cd android && ./gradlew clean || true) && rm -rf android/build && rm -rf android/app/build",
    "android:staging": "fastlane android staging --env staging",
    "android:production": "fastlane android production --env production",
    "android:uninstall": "adb uninstall guide.whitewater.staging || adb uninstall guide.whitewater",
    "android:linking": "./scripts/android_linking.sh",
    "android:e2e": "detox test -c android.sim.debug",
    "ios": "yarn setup-dev-env && yarn react-native run-ios",
    "ios:clean": "rm -rf ios/build/* && rm -rf $HOME/Library/Developer/Xcode/DerivedData/* && cd ios && pod deintegrate && (rm Podfile.lock || true)",
    "ios:setup_push": "fastlane ios setup_push --env staging",
    "ios:staging": "fastlane ios staging --env staging",
    "ios:production": "fastlane ios production --env production",
    "ios:uninstall": "xcrun simctl uninstall booted guide.whitewater",
    "ios:linking": "xcrun simctl openurl booted",
    "ios:e2e": "detox test -c ios.sim.debug",
    "release": "scripts/prepare_release.sh"
  },
  "workspaces": {
    "nohoist": [
      "@expo/*",
      "@invertase/react-native-apple-authentication",
