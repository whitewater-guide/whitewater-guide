{
  "name": "@whitewater-guide/root",
  "private": true,
  "version": "0.0.147",
  "license": "CC-BY-NC-SA-4.0",
  "description": "whitewater.guide monorepo",
  "repository": "https://github.com/doomsower/whitewater.git",
  "author": "doomsower <K.Kuznetcov@gmail.com>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "codegen": "graphql-codegen",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "nibble": "npx eslint-nibble \"**/*.{ts,tsx}\" --cache",
    "clean": "lerna run clean --stream --no-bail",
    "build": "lerna run build --stream --no-bail",
    "prepare": "scripts/prepare.sh",
    "typecheck": "lerna run typecheck --stream --no-bail",
    "dev:env": "scripts/dev_env.sh",
    "dev:cleanup": "scripts/dev_cleanup.sh",
    "dev:images": "scripts/dev_download_images.sh",
    "publish:manually": "scripts/publish_manually.sh",
    "postinstall": "scripts/postinstall.sh",
    "backup_ignored": "npx backup-gitignored -v"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "16.0.0",
    "@graphql-codegen/add": "3.1.1",
    "@graphql-codegen/cli": "2.4.0",
    "@graphql-codegen/fragment-matcher": "3.2.1",
    "@graphql-codegen/import-types-preset": "2.1.9",
    "@graphql-codegen/near-operation-file-preset": "2.2.3",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-apollo-client-helpers": "2.1.9",
    "@graphql-codegen/typescript-document-nodes": "2.2.2",
    "@graphql-codegen/typescript-operations": "2.2.2",
    "@graphql-codegen/typescript-react-apollo": "3.2.4",
    "@graphql-codegen/typescript-resolvers": "2.4.3",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.14",
    "commitlint": "^16.1.0",
    "conventional-changelog-cli": "^2.2.2",
    "dotenv": "^16.0.0",
    "dotenv-flow": "^3.2.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "ts-is-present": "^1.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "utility-types": "^3.10.0"
  },
  "dependencies": {
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "tslib": "^2.3.1"
  },
  "resolutions": {
    "**/@apollo/client": ">=3.5",
    "**/@babel/core": "^7.17.0",
    "**/color": "^3.2.1",
    "**/graphql": "^15.8.0",
    "**/markdown-it": "^12.2.0",
    "**/micromatch": "^4.0.4",
    "**/react": "^18.2.0",
    "**/react-dom": "^18.2.0",
    "**/react-test-renderer": "^18.2.0",
    "**/typescript": "^4.5.5"
  }
}
