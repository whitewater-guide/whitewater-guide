{
  "name": "@whitewater-guide/root",
  "private": true,
  "version": "0.0.1200",
  "license": "UNLICENSED",
  "description": "whitewater.guide monorepo",
  "repository": "https://github.com/doomsower/whitewater.git",
  "author": "doomsower <K.Kuznetcov@gmail.com>",
  "scripts": {
    "clear": "echo ./packages/* ./services/* ./tooling/* | bulk -c \"rm -rf node_modules\" && rm -rf node_modules",
    "bootstrap": "yarn install && echo ./packages/* ./services/* ./tooling/* | bulk -c \"yarn install\" -e",
    "dev:cleanup": "tooling/scripts/sh/dev_cleanup.sh",
    "dev:start": "node tooling/scripts/bin/dev_start.js",
    "dev:images": "tooling/scripts/sh/dev_download_images.sh",
    "dev:secrets": "node tooling/scripts/bin/devSecrets.js",
    "local:start": "tooling/scripts/sh/local_machine_start.sh",
    "local:cleanup": "docker-machine ssh ww-local < tooling/scripts/sh/local_machine_cleanup.sh",
    "local:prepare": "docker-machine ssh ww-local < tooling/scripts/sh/local_machine_prepare.sh",
    "local:deploy": "node tooling/scripts/bin/deploy.js --env=local --machine=ww-local",
    "staging:deploy": "node tooling/scripts/bin/deploy.js --env=staging --machine=ww-staging",
    "staging:cleanup": "docker-machine ssh ww-staging < tooling/scripts/sh/staging_machine_cleanup.sh",
    "staging:images": "cat dev-mount/minio/images.tar.gz | docker-machine ssh ww-staging \"cd /var/minio/data; sudo tar xzvf -\"",
    "staging:update": "node tooling/scripts/bin/update.js --env=staging --machine=ww-staging",
    "staging:sync": "tooling/scripts/sh/staging_sync.sh",
    "production:deploy": "node tooling/scripts/bin/deploy.js --env=production --machine=ww-production",
    "production:update": "node tooling/scripts/bin/update.js --env=production --machine=ww-production",
    "libs": "node tooling/scripts/bin/publish-libs.js",
    "services": "node tooling/scripts/bin/publish-docker.js",
    "test:env": "node tooling/scripts/bin/test_start.js",
    "junk": "yarn trash-junk"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.0.0",
    "bulk": "^2.0.1",
    "commitlint": "^8.0.0",
    "conventional-changelog-cli": "^2.0.21",
    "husky": "^3.0.8",
    "lint-staged": "^8.2.0",
    "prettier": "^1.18.0",
    "pretty-quick": "^1.11.0",
    "trash-junk-cli": "^1.0.3",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.0.0",
    "tslint-react-hooks": "^2.1.0",
    "typescript": "3.5.2"
  },
  "dependencies": {}
}
