{
  "name": "@whitewater-guide/root",
  "private": true,
  "version": "0.0.147",
  "license": "UNLICENSED",
  "description": "whitewater.guide monorepo",
  "repository": "https://github.com/doomsower/whitewater.git",
  "author": "doomsower <K.Kuznetcov@gmail.com>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "codegen": "graphql-codegen",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "nibble": "eslint-nibble \"**/*.{ts,tsx}\" --cache",
    "clean": "lerna run clean --stream --no-bail",
    "build": "lerna run build --stream --no-bail",
    "prepare": "lerna run prepare --stream --no-bail && husky install",
    "typecheck": "lerna run typecheck --stream --no-bail",
    "dev:env": "tooling/scripts/dev_env.sh",
    "dev:cleanup": "tooling/scripts/dev_cleanup.sh",
    "dev:images": "tooling/scripts/dev_download_images.sh",
    "publish:manually": "tooling/scripts/publish_manually.sh",
    "postinstall": "yarn patch-package && yarn codegen",
    "backup_ignored": "git clean -dxn | sed 's/^Would remove \\(.*\\)/\\1/g' | zip -@ -r ignored.zip"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^12.1.4",
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.7",
    "@graphql-codegen/import-types-preset": "^1.18.6",
    "@graphql-codegen/near-operation-file-preset": "^1.18.5",
    "@graphql-codegen/typescript": "^1.23.0",
    "@graphql-codegen/typescript-document-nodes": "^1.17.16",
    "@graphql-codegen/typescript-operations": "^1.18.4",
    "@graphql-codegen/typescript-react-apollo": "^2.3.1",
    "@graphql-codegen/typescript-resolvers": "^1.20.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.2",
    "bulk": "^2.0.1",
    "commitlint": "^12.1.4",
    "conventional-changelog-cli": "^2.1.1",
    "dotenv": "^10.0.0",
    "dotenv-flow": "^3.2.0",
    "eslint-nibble": "^7.0.0",
    "husky": "^7.0.0",
    "jest": "^27.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.1",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "trash-junk-cli": "^1.0.3",
    "ts-is-present": "^1.2.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.4",
    "utility-types": "^3.10.0"
  },
  "dependencies": {
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "tslib": "^2.3.0"
  },
  "resolutions": {
    "**/@babel/core": "^7.0.0",
    "**/graphql-tools": "^7.0.5",
    "**/graphql": "^15.5.1",
    "**/jest": "^27.0.6",
    "**/jest-resolve": "^27.0.6",
    "**/jest-circus": "^27.0.6",
    "**/micromatch": "^4.0.2",
    "**/react": "^17.0.2",
    "**/typescript": "^4.3.5"
  }
}
